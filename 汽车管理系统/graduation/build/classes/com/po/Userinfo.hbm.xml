<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.po.Userinfo" table="userinfo">
        <id name="id" type="java.lang.Integer">
            <column name="ID" /> <!-- 表中的字段名 -->
           <generator class="native" />  <!-- 主键 ：自增-->
        </id>
        <property name="username" type="java.lang.String">
            <column name="USERNAME" /><!-- 表中的字段名 -->
        </property>
        <property name="number" type="java.lang.String">
        	<column name="NUMBER" /> <!-- 表中的字段名 -->
        </property>
        <property name="pwd" type="java.lang.String">
            <column name="PWD" /><!-- 表中的字段名 -->
        </property>
        <property name="sex" type="java.lang.String">
            <column name="SEX" /><!-- 表中的字段名 -->
        </property>
        <property name="department" type="java.lang.String">
            <column name="DEPARTMENT" /><!-- 表中的字段名 -->
        </property>
    </class>
</hibernate-mapping>
